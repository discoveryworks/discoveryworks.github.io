# Site settings
title: Discovery Works
description: Discovery Works is a product development studio exploring how humans and computers work together.
baseurl: ""
url: "https://discovery.works"

# Theme configuration - Jekyll remote themes
current_theme: minimal-mistakes  # Options: 'kross', 'minimal-mistakes', 'vonge'

# Remote theme configurations
remote_themes:
  kross: "themefisher/kross-jekyll"
  minimal-mistakes: "mmistakes/minimal-mistakes"
  vonge: "CloudCannon/vonge-jekyll-bookshop-template"

# Set the active remote theme
remote_theme: "themefisher/kross-jekyll"

# Build settings
markdown: kramdown
highlighter: rouge
permalink: pretty

# Collections
collections:
  services:
    output: true
    permalink: /:collection/:name/
  projects:
    output: false
  pages:
    output: true
    permalink: /:name/

# Plugins
plugins:
  - jekyll-feed
  - jekyll-sitemap
  - jekyll-seo-tag
  - jekyll-remote-theme

# Exclude from processing
exclude:
  - Gemfile
  - Gemfile.lock
  - node_modules
  - vendor/bundle/
  - vendor/cache/
  - vendor/gems/
  - vendor/ruby/
  - MEMORY-BANK/

